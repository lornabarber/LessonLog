<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lessonRequests"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/etLessonType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etLessonDate"
            android:layout_alignBottom="@+id/etLessonDate"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/etLessonDate"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/etLessonDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark" />


        <TextView
            android:id="@+id/etLessonTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etLessonNo"
            android:layout_alignBottom="@+id/etLessonNo"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="TextView"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/etLessonStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/etLessonNo"
            android:layout_alignBottom="@+id/etLessonNo"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/etLessonNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/etLessonType"
            android:layout_below="@+id/etLessonDate"
            android:text="TextView"
            android:textSize="16sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>