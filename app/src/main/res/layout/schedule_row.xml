<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

    <TextView
        android:id="@+id/txtUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="TextView"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/txtLessonDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txtLessonNo"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLessonTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtLessonDate"
            android:layout_below="@+id/txtLessonDate"
            android:gravity="center"
            android:padding="5dp"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLessonNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtUser"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtLessonNo"
            android:drawableLeft="@drawable/ic_action_location"
            android:drawablePadding="5dp"
            android:paddingBottom="3dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="16sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>