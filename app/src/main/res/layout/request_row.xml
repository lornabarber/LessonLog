<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/txtUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txtLessonNo"
            android:text="TextView"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLessonDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtLessonNo"
            android:layout_marginStart="11dp"
            android:drawableLeft="@drawable/ic_action_date"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLessonTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtLessonDate"
            android:layout_alignBottom="@+id/txtLessonDate"
            android:layout_marginStart="11dp"
            android:layout_toEndOf="@+id/txtLessonDate"
            android:gravity="center"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLessonNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtUser"
            android:padding="5dp"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtLessonDate"
            android:layout_below="@+id/txtLessonDate"
            android:drawableLeft="@drawable/ic_action_location"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="3dp"
            android:text="TextView"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/txtLocation"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:id="@+id/relativeLayout">

        </RelativeLayout>

        <Button
            android:id="@+id/btnAccept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtLessonTime"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="18dp"
            android:text="Confirm" />

        <Button
            android:id="@+id/btnReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/btnAccept"
            android:layout_below="@+id/btnAccept"
            android:text="Decline" />

    </RelativeLayout>

</android.support.v7.widget.CardView>